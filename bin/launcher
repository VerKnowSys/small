#!/bin/sh

PROJECT_DIR="/Projects/small"
PROJECT_NAME="small"

tmux has-session -t small 2> /dev/null
if [ "$?" = "0" ]; then
    tmux attach -t small
else
    cd ${PROJECT_DIR}
    test -d ${PROJECT_DIR}/deps || (MIX_ENV=prod mix do deps.get, deps.compile, compile)
    if [ "$?" = "0" ]; then
        tmux new -s ${PROJECT_NAME} -c ${PROJECT_DIR} -n ${PROJECT_NAME} -d "MIX_ENV=prod iex --name \"${PROJECT_NAME}\" --sname \"${PROJECT_NAME}\" --cookie \"${PROJECT_NAME}\" -S mix"
    fi
fi
